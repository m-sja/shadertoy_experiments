// work in progress!
// Converts two input Streams to r100 compatible sbs 3D format.

void mainImage( out vec4 fragColor, in vec2 fragCoord )
{
    vec2 xy = fragCoord.xy/iResolution.xy; //Get Coordinates relative to resolution (0.0 to 1.0)
    vec4 sbs;
    
    if(xy.x > 0.5)
    {
    	sbs = texture(iChannel0,vec2(xy.y,1.0-xy.x));		//Left Eye
    }
	else
    {
        sbs = texture(iChannel1,vec2(1.0-xy.y,xy.x));		//Right Eye
    }
    fragColor = sbs;		//Output
}
